<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_margin="4dp"
            android:layout_gravity="center"
            android:text="markerTest"
            android:id="@+id/markerTestBtn_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_margin="4dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="등록자"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/user_id_text_confirm_card"
                android:text=" "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="4dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="마커 이미지"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_gravity="center"
                android:id="@+id/marker_preview_confirm_card"
                android:src="@drawable/ic_launcher_background"
                android:adjustViewBounds="true"
                android:layout_width="200dp"
                android:layout_height="200dp" />
            <View
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="4dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="마커 평가 점수"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/marker_rating_text_confirm_card"
                android:text=" "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_margin="4dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="등록 번호"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/marker_phone_text_confirm_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="4dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="마커 크기값"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/marker_scale_confirm_card"
                android:text="Scale : "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_margin="4dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:layout_gravity="center"
                android:text="마커 회전 값"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/marker_rotatex_confirm_card"
                android:text="Rotate_X : "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/marker_rotatey_confirm_card"
                android:text="Rotate_Y : "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/marker_rotatez_confirm_card"
                android:text="Rotate_Z : "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <View
                android:background="#000000"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"/>
        </LinearLayout>

    </LinearLayout>


</ScrollView>